#cloud-config
hostname: ${hostname}
fqdn: ${hostname}.local
manage_etc_hosts: true

users:
  - name: ubuntu
    groups: sudo
    shell: /bin/bash
    lock_passwd: false
    plain_text_passwd: "ubuntu"
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh-authorized-keys:
      - ${ssh_key}

package_update: true
package_upgrade: true

runcmd:
  - echo "Welcome to ${hostname}" > /etc/motd
